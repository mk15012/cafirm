{
  "name": "ca-firm-backend",
  "version": "1.0.0",
  "description": "CA Firm Management System - Backend API",
  "main": "dist/index.js",
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:local": "node scripts/use-local-db.js && npx prisma generate && tsx watch src/index.ts",
    "build": "tsc && npx prisma generate",
    "start": "node dist/index.js",
    "start:prod": "npx ts-node --transpile-only src/index.ts",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:local": "node scripts/use-local-db.js && npx prisma generate",
    "db:prod": "node scripts/use-prod-db.js && npx prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "node prisma/seed.js",
    "precommit": "node scripts/use-prod-db.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.6",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "mysql2": "^3.16.0",
    "prisma": "^5.22.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
